<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ProtectUs</title>
  <link rel="shortcut icon" type="image/png" href="/logo.png">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>

<body class="bg-[#515F84] text-white flex flex-col justify-center items-center h-screen">
  <!-- Back button -->
  <a href="/">
    <span
      class="material-symbols-outlined absolute top-0 left-0 mt-4 ml-4 inline-block px-3 py-1 bg-[#515F84] rounded-lg text-[#EAD797]">
      arrow_back_ios
    </span>
  </a>
  <br>
  <br>
  <br>
  <img src="logo.png" alt="" class="w-[300px] h-[300px] justify-center">
  <br>
  <div class="max-w-md mx-auto bg-[#EAD797] rounded-lg p-8 shadow-[0_0px_10px_0px_rgba(0,0,0,0.5)] mb-8">
    <!-- Login form -->
    <h2 class="text-2xl mb-4 text-[#223053]">Login</h2>

        <form action="/login" method="post">
          <div class="mb-4">
            <label for="email" class="block mb-2 text-[#223053]">Email</label>
            <input type="email" id="email" name="email" class="w-full px-4 py-2 rounded-lg bg-white text-zinc-950"
              placeholder="email@email.com" required>
          </div>
          <div class="mb-4">
            <label for="password" class="block mb-2 text-[#223053]">Password</label>
            <input type="password" id="password" name="password"
              class="w-full px-4 py-2 rounded-lg bg-white text-zinc-950 <%= typeof error !== 'undefined' ? 'border-red-500' : '' %>"
              placeholder="*****" required>
          </div>
          <button type="submit" class="w-full bg-[#515F84] text-white py-2 rounded-lg">Login</button>
        </form>
        <div class="mt-4">
          <a href="/resetPassword" class="text-[#515F84]">Forgot Password?</a>
        </div>
  </div>
</body>

<script>
  if (typeof error !== 'undefined') {
    document.getElementById('password').style.borderColor = 'red';
  }
</script>

</html>